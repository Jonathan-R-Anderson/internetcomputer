{
    "name": "readline",
    "version": "8.2",
    "description": "GNU Readline library for input editing.",
    "source": {
      "type": "http",
      "url": "https://ftp.gnu.org/gnu/readline/readline-8.2.tar.gz",
      "sha256": "3feb7171f16a8ce69d9f5b276c90991a55731e87af12191b86dd6a0ef0d12e63"
    },
    "dependencies": ["ncurses"],
    "build": {
      "commands": [
        "./configure --prefix=/usr --disable-static",
        "make -j$(nproc) SHLIB_LIBS=-lncursesw"
      ]
    },
    "install": {
      "commands": [
        "make DESTDIR=$DESTDIR install"
      ]
    },
    "provides": ["/lib/libreadline.so"]
  }